{
  "name": "young-ellens-desktop",
  "version": "2.0.0",
  "description": "Young Ellens AI Chatbot - Clean Desktop Application",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch\" \"wait-on http://localhost:8080 && electron .\"",
    "watch": "webpack serve --config webpack.config.js",
    "build": "webpack --config webpack.config.js --mode production",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "clean": "rm -rf dist build"
  },
  "keywords": [
    "electron",
    "desktop",
    "chatbot",
    "ai",
    "young-ellens",
    "dutch-rap"
  ],
  "author": "Young Ellens Desktop Team",
  "license": "MIT",
  "dependencies": {
    "sqlite3": "^5.1.7",
    "axios": "^1.6.8",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "html-webpack-plugin": "^5.6.0",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.youngellens.desktop",
    "productName": "Young Ellens",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/main/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}