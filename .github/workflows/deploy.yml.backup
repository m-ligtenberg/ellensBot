name: Deploy Young Ellens Chatbot

on:
  push:
    branches: [ main, master ]
  pull_request:
    branches: [ main, master ]

jobs:
  # Frontend Build and Deploy to GitHub Pages
  frontend:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3
    
    - name: Setup Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '18'
        cache: 'npm'
        cache-dependency-path: frontend/package-lock.json
    
    - name: Install frontend dependencies
      run: |
        cd frontend
        npm ci
    
    - name: Build frontend
      run: |
        cd frontend
        npm run build
      env:
        REACT_APP_BACKEND_URL: ${{ secrets.BACKEND_URL || 'https://ellens-bot-backend.up.railway.app' }}
        REACT_APP_WS_URL: ${{ secrets.WS_URL || 'wss://ellens-bot-backend.up.railway.app' }}
    
    - name: Deploy to GitHub Pages
      uses: peaceiris/actions-gh-pages@v3
      if: github.ref == 'refs/heads/main' || github.ref == 'refs/heads/master'
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}
        publish_dir: frontend/dist

  # Backend Build and Test
  backend:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3
    
    - name: Setup Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '18'
        cache: 'npm'
        cache-dependency-path: backend/package-lock.json
    
    - name: Install backend dependencies
      run: |
        cd backend
        npm ci
    
    - name: TypeScript compilation check
      run: |
        cd backend
        npx tsc --noEmit
    
    - name: Run tests (if available)
      run: |
        cd backend
        npm test || echo "No tests configured"
    
    - name: Build backend
      run: |
        cd backend
        npm run build || echo "No build script configured"

  # Deploy to Railway (automatic via Railway GitHub integration)
  deploy-backend:
    runs-on: ubuntu-latest
    needs: [backend]
    if: github.ref == 'refs/heads/main' || github.ref == 'refs/heads/master'
    steps:
    - uses: actions/checkout@v3
    
    - name: Deploy to Railway
      uses: bervProject/railway-deploy@v1.0.4
      with:
        railway_token: ${{ secrets.RAILWAY_TOKEN }}
        service: 'ellens-bot-backend'